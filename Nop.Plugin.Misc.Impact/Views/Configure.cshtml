@model ConfigurationModel

@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="ImpactAdmin" asp-action="Configure" method="post">
    <div class="cards-group">
        <div class="card card-default">
            <div class="card-body">
                <p>
                    To enable this plugin, you'll need to:<br />
                    <br />
                    1. <a href="https://app.impact.com/" target="_blank">Sign-up for Impact account</a><br />
                    2. Fill in your account details below<br />
                </p>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="Enabled" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="Enabled" />
                        <span asp-validation-for="Enabled"></span>
                    </div>
                </div>
                <nop-nested-setting asp-for="Enabled">
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="AccountSId" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="AccountSId" asp-required="true" />
                            <span asp-validation-for="AccountSId"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="AuthToken" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="AuthToken" asp-required="true" html-attributes="@(new { value = Model.AuthToken })" />
                            <span asp-validation-for="AuthToken"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="ProgramId" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ProgramId" asp-required="true" />
                            <span asp-validation-for="ProgramId"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="ActionTrackerId" />
                        </div>
                        <div class="col-md-9">
                            <nop-editor asp-for="ActionTrackerId" asp-required="true" />
                            <span asp-validation-for="ActionTrackerId"></span>
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-md-3">
                            <nop-label asp-for="UniversalTrackingScript" />
                        </div>
                        <div class="col-md-9">
                            <nop-textarea asp-for="UniversalTrackingScript" asp-required="true" />
                            <span asp-validation-for="UniversalTrackingScript"></span>
                        </div>
                    </div>
                </nop-nested-setting>
                <div class="form-group row">
                    <div class="col-md-9 offset-3">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>